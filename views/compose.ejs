<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label for="titleInput">Title</label>
    <input type="text" name="titleContent" class="form-control" id="titleInput">
  </div>

  <div class="form-group">
    <label for="postInput">Post</label>
    <textarea name="postContent" cols="40" rows="5" id="postInput" class="form-control"></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-lg btn-primary">Publish</button>

</form>

<%- include('partials/footer'); -%>
